<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dapao.mapper.AdminMapper">


	<!-- 회원관리 - 개인회원정보출력 -->
	<select id="userInfo" resultType="UserVO">
		select * from us where 
		us_id=#{us_id}
	</select>

	<!-- 회원관리 - 회원정지부여 -->
	<update id="userStop">
		update us set us_stopdate=date_add(now(), interval 
		#{us_stopdate} day) where us_id=#{us_id};
	</update>

	<!-- 회원관리 - 회원정지(회원상태변경) -->
	<update id="userStateUpdate">
		update us set us_state=1 where us_id=#{us_id}
	</update>

	<!-- 회원관리 - 회원탈퇴(회원상태변경) -->
	<update id="userDelete">
		update us set us_state=2 where us_id=#{us_id}
	</update>
	
	<!-- 회원관리 - 페이징처리 후 회원리스트 조회 -->
	<select id="userListCri" resultType="UserVO">
		select * from us 
		where us_id!='admin' order by us_id 
		limit #{pageStart},#{pageSize}
	</select>

	<!-- 회원관리 - 전체회원수 조회 -->
	<select id="userCount" resultType="int">
		select count(*) from us
	</select>
	
	<!-- 사업자관리 - 모든사업자정보출력 -->
	<select id="ownerList" resultType="EntVO">
		select * from ent
	</select>


	<!-- 사업자관리 - 사업자정보출력 -->
	<select id="ownerInfo" resultType="EntVO">
		select * from ent where
		own_id=#{own_id}
	</select>

	<!-- 사업자관리 - 사업자 탈퇴 -->
	<update id="ownerInfoDelete">
		update ent set own_state=2
		where own_id=#{own_id}
	</update>

	<!-- FAQ&공지 관리 - FAQ 리스트 -->
	<select id="FAQList" resultType="CsVO">
		select * from cs where cs_board
		= 1
	</select>

	<!-- FAQ&공지 관리 - FAQ 1개 정보 -->
	<select id="FAQInfo" resultType="CsVO">
		select * from cs where cs_no =
		#{cs_no}
	</select>

	<!-- FAQ&공지 관리 - FAQ 글쓰기 -->
	<insert id="">

	</insert>

	<!-- FAQ&공지 관리 - FAQ정보 수정 -->
	<update id="FAQInfoUpdate">
		update cs
		set cs_title=#{cs_title},
		cs_content=#{cs_content},cs_group=#{cs_group},cs_board=#{cs_board},cs_state=#{cs_state},cs_view=#{cs_view},cs_regdate=now(),cs_update=now()
		where cs_no=#{cs_no}
	</update>





</mapper> 